@model ContactsManager.Domain.Entities.Contact

<form asp-controller="Home" asp-action="CreateContact">
  <div class="modal-content">
    <h3>Create new contact</h3>
    <hr>
    <div class="row">
      <div class="input-field col s6">
        <i class="material-icons prefix">account_circle</i>
        <input id="full_name" type="text" class="validate"
               asp-for="Name">
        <label for="full_name">Full name</label>
      </div>
      <div class="input-field col s6">
        <i class="material-icons prefix">phone</i>
        <input id="mobile_phone" type="tel" class="validate"
               asp-for="MobilePhone">
        <label for="mobile_phone">Mobile phone</label>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s6">
        <i class="material-icons prefix">work</i>
        <input id="job_title" type="text" class="validate"
               asp-for="JobTitle">
        <label for="job_title">Job title</label>
      </div>
      <div class="input-field col s6">
        <i class="material-icons prefix">date_range</i>
        <input id="birth_date" type="text" class="datepicker"
               onclick="openDatepicker({
                 datepickerSelector: '#birth_date'
               })"
               asp-for="BirthDate">
        <label for="birth_date">Birth date</label>
      </div>
    </div>
  </div>
  <div class="modal-footer">
    <button class="btn waves-effect waves-light" type="submit" name="action">
      Create
      <i class="material-icons right">send</i>
    </button>
  </div>
</form>